%section
  %section
    .container
      .row
        .col-lg-12#product-title
          %h2= @product.name
      .row
        .col-lg-4= image_tag(@product.picture.url(:medium), class: 'img-responsive')
        .col-lg-8
          %p
            = @product.description
          = form_tag(controller: :order_items, action: :create, remote: true) do
            = hidden_field_tag 'order_item[product_id]', @product.id
            = hidden_field_tag 'order_item[quantity]', 1
            = submit_tag "Â¡Lo quiero!", class: "shop-btn"

            = link_to "Seguir mirando", :back, class: "next-btn"


