%h1 Listing products

.row
  .col-lg-10
    %table.table
      %thead
        %tr
          %th Name
          %th Price
          %th Stock
          %th Description
          %th
          %th
          %th

      - @products.each do |product|
        %tbody
          %tr
            %td= product.name
            %td= product.price
            %td= product.stock
            %td= product.description
            %td= link_to 'Show', [:admin, product]
            %td= link_to 'Edit', edit_admin_product_path(product)
            %td= link_to 'Destroy', [:admin, product], :method => :delete, :data => { :confirm => 'Are you sure?' }


      %tr.active
        %td
        %td
        %td
        %td
        %td
        %td
        %td= link_to 'New Product', new_admin_product_path
